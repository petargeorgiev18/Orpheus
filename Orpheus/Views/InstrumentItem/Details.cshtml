@model Orpheus.ViewModels.InstrumentItemViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow" />
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <h4 class="text-muted">@Model.BrandName</h4>
            <p>@Model.Description</p>

            <h3 class="text-primary">Price: @Model.Price.ToString("F2") BGN</h3>

            <div class="mt-4">
                <a asp-action="All" asp-controller="Instruments" class="btn btn-secondary me-2">
                    ← Back to list
                </a>
                <a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@Model.Id" class="btn btn-success">
                    Add to Cart
                </a>
            </div>
        </div>
    </div>
</div>
