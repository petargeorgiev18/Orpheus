@model Orpheus.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="p-5 mb-4 rounded-3 hero-section text-white">
    <div class="container py-5">
        <h1 class="display-4 fw-bold">Welcome to Orpheus Music Shop</h1>
        <p class="lead">Your universe of sound — find your instrument, vinyl, or band merch today!</p>
        <a class="btn btn-warning btn-lg" href="/Identity/Account/Login">Shop Now</a>
    </div>
</div>

<div class="container my-5">
    <h2 class="section-title text-center mb-4">🎵 Explore Our Categories</h2>
    <div class="row text-center">
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card category-card bg-primary text-white h-100">
                <img src="https://via.placeholder.com/300x180?text=Instruments" class="card-img-top" alt="Instruments">
                <div class="card-body">
                    <h5 class="card-title">Instruments</h5>
                    <p>Guitars, keyboards, drums</p>
                    <a href="/Instruments/All" class="btn btn-light btn-sm">Browse</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card category-card bg-danger text-white h-100">
                <img src="https://via.placeholder.com/300x180?text=Albums" class="card-img-top" alt="Albums">
                <div class="card-body">
                    <h5 class="card-title">Albums</h5>
                    <p>Vinyls, CDs, digital</p>
                    <a href="/Albums" class="btn btn-light btn-sm">Browse</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card category-card bg-success text-white h-100">
                <img src="https://via.placeholder.com/300x180?text=Accessories" class="card-img-top" alt="Accessories">
                <div class="card-body">
                    <h5 class="card-title">Accessories</h5>
                    <p>Strings, stands, picks</p>
                    <a href="/Accessories" class="btn btn-light btn-sm">Browse</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card category-card bg-warning text-dark h-100">
                <img src="https://via.placeholder.com/300x180?text=Merch" class="card-img-top" alt="Merch">
                <div class="card-body">
                    <h5 class="card-title">Band Merch</h5>
                    <p>Shirts, caps, posters</p>
                    <a href="/Merch" class="btn btn-dark btn-sm">Browse</a>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-5">

    <h2 class="section-title text-center mb-4">🔥 Featured Instruments</h2>
    <div class="row">
        @foreach (var instrument in Model.FeaturedInstruments)
        {
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card product-card h-100">
                    <img src="@(instrument.ImageUrl ?? "/images/default-image.png")" class="card-img-top" alt="@instrument.Name" />
                    <div class="card-body text-center">
                        <h5 class="card-title">@instrument.Name</h5>
                        <p class="text-muted">@instrument.Price.ToString("C")</p>
                        <a href="/Instruments/Details/@instrument.Id" class="btn btn-outline-primary btn-sm">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <hr class="my-5">

    <h2 class="section-title text-center mb-4">🎧 New Albums</h2>
    <div class="row">
        @foreach (var album in Model.FeaturedAlbums.Take(3))
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100 text-center">
                    <img src="@(album.ImageUrl ?? "/images/default-image.png")" class="card-img-top" alt="@album.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@album.Name</h5>
                        <p class="text-muted">@album.BrandName</p>
                        <a href="/Albums/Details/@album.Id" class="btn btn-outline-primary btn-sm">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>