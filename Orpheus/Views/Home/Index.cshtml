@{
    ViewData["Title"] = "Home";
}


<div class="p-5 mb-4 rounded-3 hero-section text-white">
    <div class="container py-5">
        <h1 class="display-4 fw-bold">Welcome to Orpheus Music Shop</h1>
        <p class="lead">Your universe of sound — find your instrument, vinyl, or band merch today!</p>
        <a class="btn btn-warning btn-lg" href="#">Shop Now</a>
    </div>
</div>

<div class="container my-5">
    <h2 class="section-title text-center mb-4">🎵 Explore Our Categories</h2>
    <div class="row text-center">
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card category-card bg-primary text-white h-100">
                <img src="https://via.placeholder.com/300x180?text=Instruments" class="card-img-top" alt="Instruments">
                <div class="card-body">
                    <h5 class="card-title">Instruments</h5>
                    <p>Guitars, keyboards, drums</p>
                    <a href="#" class="btn btn-light btn-sm">Browse</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card category-card bg-danger text-white h-100">
                <img src="https://via.placeholder.com/300x180?text=Albums" class="card-img-top" alt="Albums">
                <div class="card-body">
                    <h5 class="card-title">Albums</h5>
                    <p>Vinyls, CDs, digital</p>
                    <a href="#" class="btn btn-light btn-sm">Browse</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card category-card bg-success text-white h-100">
                <img src="https://via.placeholder.com/300x180?text=Accessories" class="card-img-top" alt="Accessories">
                <div class="card-body">
                    <h5 class="card-title">Accessories</h5>
                    <p>Strings, stands, picks</p>
                    <a href="#" class="btn btn-light btn-sm">Browse</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card category-card bg-warning text-dark h-100">
                <img src="https://via.placeholder.com/300x180?text=Merch" class="card-img-top" alt="Merch">
                <div class="card-body">
                    <h5 class="card-title">Band Merch</h5>
                    <p>Shirts, caps, posters</p>
                    <a href="#" class="btn btn-dark btn-sm">Browse</a>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-5">

    <h2 class="section-title text-center mb-4">🔥 Featured Instruments</h2>
    <div class="row">
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card product-card h-100">
                <img src="https://via.placeholder.com/300x180?text=Electric+Guitar" class="card-img-top" alt="Electric Guitar">
                <div class="card-body text-center">
                    <h5 class="card-title">Electric Guitar</h5>
                    <p class="text-muted">$399.99</p>
                    <a href="#" class="btn btn-outline-primary btn-sm">Details</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card product-card h-100">
                <img src="https://via.placeholder.com/300x180?text=MIDI+Keyboard" class="card-img-top" alt="MIDI Keyboard">
                <div class="card-body text-center">
                    <h5 class="card-title">MIDI Keyboard</h5>
                    <p class="text-muted">$149.99</p>
                    <a href="#" class="btn btn-outline-primary btn-sm">Details</a>
                </div>
            </div>
        </div>
        <!-- Add more products similarly -->
    </div>

    <hr class="my-5">

    <h2 class="section-title text-center mb-4">🎧 New Albums</h2>
    <div id="albumCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="card h-100 text-center">
                            <img src="https://via.placeholder.com/300x180?text=Album+1" class="card-img-top" alt="Album 1">
                            <div class="card-body">
                                <h5 class="card-title">Echoes of Silence</h5>
                                <p class="text-muted">The Weeknd</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card h-100 text-center">
                            <img src="https://via.placeholder.com/300x180?text=Album+2" class="card-img-top" alt="Album 2">
                            <div class="card-body">
                                <h5 class="card-title">The Dark Side</h5>
                                <p class="text-muted">Pink Floyd</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card h-100 text-center">
                            <img src="https://via.placeholder.com/300x180?text=Album+3" class="card-img-top" alt="Album 3">
                            <div class="card-body">
                                <h5 class="card-title">Back in Black</h5>
                                <p class="text-muted">AC/DC</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Add more carousel-items as needed -->
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#albumCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#albumCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
